<div class=container>
  <div class=span1></div>
  <div class=span8>
    <h1>Current Buzzwords</h1>
    <%= link_to 'New Buzzword', new_buzzword_path,  class: "btn  btn-primary" %>
     <%= will_paginate @buzzwords, outer_window: 1, inner_window: 3 %>
    <table class="table" "table-striped" id="buzztable">
      <tr>
        <th>Phrase</th>
        <th>Edit </th>
        <th>Destroy </th>
        <th></th>
      </tr>
      
    <% @buzzwords.each do |buzzword| %>
    
      <tr>
        <td><%= buzzword.phrase %></td>
         <td>
            <%= link_to edit_buzzword_path(buzzword) do %>
            <i class="icon-pencil"></i>
            <% end %>
        </td>
        <td><%= link_to buzzword,
                   confirm: 'Are you sure?',
                   method: :delete do %>
                   <i class="icon-trash"></i>
                   <% end %>
        </td>
    
    
      </tr>
    <% end %>
    </table>
    
    <br />
    
   
  </div>
</div>
