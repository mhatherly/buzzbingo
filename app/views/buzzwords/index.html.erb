<container>
<h1>Listing buzzwords</h1>

<table class="table" "table-striped">
  <tr>
    <th>Phrase</th>
    <th>Edit </th>
    <th>Destroy </th>
    <th></th>
  </tr>

<% @buzzwords.each do |buzzword| %>
  <tr>
    <td><%= buzzword.phrase %></td>
     <td>
        <%= link_to edit_buzzword_path(buzzword) do %>
        <i class="icon-pencil"></i>
        <% end %>
    </td>
    <td><%= link_to buzzword,
               confirm: 'Are you sure?',
               method: :delete do %>
               <i class="icon-trash"></i>
               <% end %>
    </td>


  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Buzzword', new_buzzword_path %>
</container>
